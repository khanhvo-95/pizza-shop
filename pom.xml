<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>pizza-shop</artifactId>
    <groupId>io.contino</groupId>
    <version>0.0.1</version>
    <packaging>pom</packaging>

    <modules>
        <module>pizza-shop-models</module>
        <module>pizza-shop-tracing</module>
        <module>pizza-shop-web-receiver</module>
        <module>pizza-shop-repository</module>
        <module>pizza-shop-transformer</module>
    </modules>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version> <!-- or use the latest version -->
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>